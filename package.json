{
  "name": "react-native-npm-template",
  "version": "0.0.1",
  "description": "Template to quickly create a React Native library",
  "author": {
    "name": "Hugo EXTRAT",
    "email": "extrat.h@gmail.com",
    "url": "https://www.github.com/huextrat"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/huextrat/react-native-npm-template"
  },
  "bugs": {
    "url": "https://github.com/huextrat/react-native-npm-template/issues"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "format": "prettier --write ./src",
    "format:check": "prettier --check --cache ./src",
    "prepare": "husky install",
    "build": "tsc",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/jest": "29.5.12",
    "@types/node": "20.14.11",
    "@types/react": "18.3.3",
    "@types/react-native": "0.73.0",
    "@typescript-eslint/eslint-plugin": "7.16.1",
    "@typescript-eslint/parser": "7.16.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.34.4",
    "husky": "9.1.1",
    "prettier": "3.3.3",
    "react": "18.3.1",
    "react-native": "0.74.3",
    "semantic-release": "23.1.1",
    "typescript": "5.5.3"
  }
}
